<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="LoadingScreenSimulator.Themes.RedDarkTheme"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PrimaryColor">#E00000</Color>
    <Color x:Key="SecondaryColor">#242424</Color>
    <Color x:Key="TertiaryColor">#662020</Color>
    <Color x:Key="SeparatorColor">#404040</Color>
    <Color x:Key="OutlineColor">#707070</Color>

    <Color x:Key="PageBackgroundColor">#101010</Color>
    <Color x:Key="PageTextColor">White</Color>

    <Color x:Key="PrimaryTextColor">White</Color>
    <Color x:Key="SecondaryTextColor">White</Color>

    <Color x:Key="DefaultNullPercentColor">#808080</Color>
    <Color x:Key="Default0To20PercentColor">#DD0000</Color>
    <Color x:Key="Default21To40PercentColor">#FFA500</Color>
    <Color x:Key="Default41To60PercentColor">#FFE000</Color>
    <Color x:Key="Default61To80PercentColor">#00C000</Color>
    <Color x:Key="Default81To100PercentColor">#009500</Color>

    <Color x:Key="YesColor">#009500</Color>
    <Color x:Key="NoColor">#DD0000</Color>
</ResourceDictionary>